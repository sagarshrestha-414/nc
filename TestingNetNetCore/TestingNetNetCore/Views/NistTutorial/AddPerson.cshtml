@model PersonalDetail
@{
    ViewData["Title"] = "AddPerson";
}

<h1>AddPerson</h1>


@using (Html.BeginForm("AddPersonDetail", "NistTutorial", FormMethod.Post))
{

    @Html.ValidationSummary(true)
    @Html.HiddenFor(x => x.PersonalDetailId)
    <table>
        <tr>
            <td colspan="2">
                Add your Data to create new person Data
            </td>

        </tr>
        <tr>
            <td>@Html.DisplayNameFor(x => x.FirstName)</td>
            <td>
                @Html.TextBoxFor(x => x.FirstName)
                @Html.ValidationMessageFor(x => x.FirstName)
            </td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(x => x.Address)</td>
            <td>
                @Html.TextBoxFor(x => x.Address)
                @Html.ValidationMessageFor(x => x.Address)
            </td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(x => x.Occupation)</td>
            <td>
                @Html.TextBoxFor(x => x.Occupation)
                @Html.ValidationMessageFor(x => x.Occupation)
            </td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(x => x.Age)</td>
            <td>
                @Html.TextBoxFor(x => x.Age)
                @Html.ValidationMessageFor(x => x.Age)
            </td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(x => x.Email)</td>
            <td>
                @Html.TextBoxFor(x => x.Email)
                @Html.ValidationMessageFor(x => x.Email)
            </td>
        </tr>



        <tr>
            <td colspan="2"><button type="submit" class="btn btn-secondary">Add Detail</button></td>
        </tr>
    </table>
}